
{% macro bAsset(relativeUrl) %}
{% set relativeUrl = 'bundles/dakinfoscreen/' ~ relativeUrl %}
{{ asset(relativeUrl) }}
{% endmacro %}

{# import 'DakInfoScreenBundle::macros.twig' as m #}


<!DOCTYPE html>
<html>
 <head>
  <meta charset="utf-8">
  <title>{% block title %}The Title Of Your Presentation{% endblock %}</title>

  <!-- *****************  DZSlides CORE 2.0b1 *************************** -->
  <!-- *********************************************************************** -->
  <!-- *********************************************************************** -->
  <!-- *********************************************************************** -->
  <!-- *********************************************************************** -->

  <!-- Default Style -->
  <link rel="stylesheet" type="text/css" href="{{ _self.bAsset('css/default.css') }}" />

  <!-- Your Style -->
  <!-- Define the style of you presentation -->

  <!-- Maybe a font from http://www.google.com/webfonts ? -->
  <link href='http://fonts.googleapis.com/css?family=Oswald' rel='stylesheet'>

  <link rel="stylesheet" type="text/css" href="{{ _self.bAsset('css/style.css') }}" />

  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"></script>
  <script type="text/javascript" src="{{ _self.bAsset('js/jquery.tmpl.min.js') }}"></script>

  <script type="text/javascript" src="{{ _self.bAsset('js/controls.js') }}"></script>
  <script type="text/javascript" src="{{ _self.bAsset('js/slideControls.js') }}"></script>

  <!-- Extra modules -->

  {% for moduleName, module in slideModules %}
    <!-- start include module {{ moduleName }} -->

    {% for stylesheet in module.style %}
      <link rel="stylesheet" type="text/css" href="{{ asset(module.directory ~ '/' ~ stylesheet) }}" />
    {% endfor %}
    {% for script in module.script %}
      <script type="text/javascript" src="{{ asset(module.directory ~ '/' ~ script) }}"></script>
    {% endfor %}

    <!-- end include module {{ moduleName }} -->
  {% endfor %}

  <script type="text/javascript">
   var checkReloadUrl = "{{ checkReloadUrl|default() }}";

   //slideControl.registerModule(eventCollection);
   {% for moduleName, module in slideModules %}

     {% if module.reference %}
       slideControl.registerModule({{ module.reference }})
     {% else %}
       slideControl.registerModule({{ moduleName }})
     {% endif %}
   {% endfor %}

  </script>

  <script type="text/javascript" src="{{ _self.bAsset('js/app.js') }}"></script>

  <style type="text/css">{{ extraCss | default() | raw }}</style>
 </head>
 <body id="slides" data-default-slide-duration="5000" class="{{ screenType | default() }}" data-scaling-allowed="{{ scalingAllowed | default('true') }}">
  <!-- Your Slides -->
  <!-- One section is one slide -->

  {% block slides %}

   <section>
    <h1>Example slide.</h1>
    <h2>Please put up a slide :)</h2>
   </section>

  {% endblock %}

  {% if testRun|default(false) %}
    <div class="dakInfoScreenTestRun">
      <span>This is just a test run! <br />Please use the assigned screen.</span>
    </div>
  {% endif %}
 </body>
</html>
