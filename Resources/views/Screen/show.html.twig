{% extends '::base.html.twig' %}
{% block title %}Screen{% endblock %}

{% block body %}
<h1>Screen</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('screen') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('screen_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <a href="{{ path('screen_run', { 'id': entity.id }) }}">
            Run
        </a>
    </li>
    <li>
        <form action="{{ path('screen_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}
