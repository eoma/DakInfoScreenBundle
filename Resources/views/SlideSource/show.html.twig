{% extends '::base.html.twig' %}
{% block title %}SlideSource show{% endblock %}

{% block body %}
<h1>SlideSource</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ entity.content }}</td>
        </tr>
        <tr>
            <th>Created at</th>
            <td>{{ entity.createdAt | date }}</td>
        </tr>
        <tr>
            <th>Updated at</th>
            <td>{{ entity.updatedAt | date }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('slidesource') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('slidesource_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('slidesource_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}
